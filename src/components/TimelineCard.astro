---
interface Props {
  side: "left" | "right";
}

const { side } = Astro.props;
---

<div class={`timeline-item ${side} relative mb-2.5`}>
  <span class={`dot-${side} absolute top-[20%] w-3 h-3 bg-brand-dot rounded-full -translate-y-1/2 z-[1]`}></span>
  <div class="card-timeline relative w-full max-w-[310px] z-[6] p-5 rounded-lg shadow-md bg-white transition-shadow duration-300 hover:shadow-lg opacity-0 translate-y-5 animate-fadeInUp">
    <slot />
  </div>
</div>
