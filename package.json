{
  "name": "portfolio",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint src/",
    "format:check": "prettier --check src/",
    "format": "prettier --write src/",
    "check:links": "linkinator http://localhost:4321/portfolio/ --recurse --skip \"researchgate\\.net\"",
    "check:a11y": "pa11y-ci",
    "check:all": "npm run lint && npm run format && npm run build && sh -c 'npm run preview & sleep 5 && npm run check:links && npm run check:a11y; kill $!'"
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@iconify-json/bi": "^1.2.7",
    "astro": "^5.3.0",
    "astro-icon": "^1.1.5",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.6.0",
    "linkinator": "^7.5.3",
    "pa11y-ci": "^4.0.1",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1"
  }
}
